<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>AdminLTE 3 | Add New Investors</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- overlayScrollbars -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
  <!-- Navbar -->
  <% include files/header %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Add New Investors</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Add New Investors</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="card card-primary">
        <!--<div class="card-header">
          <h3 class="card-title">Quick Example</h3>
        </div>-->
        <!-- /.card-header -->
        <!-- form start -->
        <form id="add-new-investors" action="add-new-investors" method="post" enctype="multipart/form-data">
        <!-- <form action="add-new-investors" id="add-new-investors" method="post"> -->
          <div class="card-body">
            <div class="row">
              <% if (locals.errors) { %>
                    <% Object.values(errors).forEach(function(error){ %>

                      <div class="col-12 alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error.message %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>   
                    <% }); %>
                <% } %>
                <% if (locals.messages) { %>
                  <% Object.values(messages).forEach(function(message){ %>

                    <div class="col-12 alert alert-success alert-dismissible fade show" role="alert">
                      <%= message.message %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>   
                  <% }); %>
              <% } %>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_name">Investor Name *</label>
                  <input type="name" required name="investor_name" class="form-control" id="investor_name" placeholder="Enter Investor Name">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_mobile">Investor Mobile Number *</label>
                  <input type="tel" required name="investor_mobile" class="form-control" id="investor_mobile" placeholder="Enter Investor Mobile Number" title="Enter valid mobile number" minlength="5" maxlength="10" size="10" autocomplete="off" pattern="[6789][0-9]{9}">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_address">Investor Address *</label>
                  <input type="text" required name="investor_address" class="form-control" id="investor_address" placeholder="Enter Investor Address">
                </div>
              </div>
              
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="invested_amount">Invested Amount *</label>
                  <input type="text" required name="invested_amount" class="form-control" id="invested_amount" placeholder="Enter Invested Amount" title="Enter valid Amount" pattern="[1-9][0-9]{1,}">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="rate_of_interest">Rate of Interest *</label>
                  <input type="text" required name="rate_of_interest" class="form-control" id="rate_of_interest" placeholder="Enter Rate of Interest" title="Enter valid Rate of Interest" pattern="[0-9]{1,}">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="tenure_period_of_investment_month">Tenure/Period of Investment *</label>
                  <div class="row">
                    <div class="col-6">
                      <select class="form-control" required name="tenure_period_of_investment_month" id="tenure_period_of_investment_month">
                        <option value="">Select Month</option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                      </select>
                    </div>
                    <div class="col-6">
                      <select class="form-control" required name="tenure_period_of_investment_year" id="tenure_period_of_investment_year">
                        <option value="">Select Year</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                        <option value="2025">2025</option>
                      </select>
                    </div>
                  </div>
                  <!-- <input type="text" name="tenure_period_of_investment_month" class="form-control" id="tenure_period_of_investment_month" placeholder="Enter Tenure/Period of Investment"> -->
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="interest_pay_out_frequencies">Interest Pay-out Frequencies *</label>
                  <select class="form-control" required name="interest_pay_out_frequencies" id="interest_pay_out_frequencies">
                    <option value="">Select Frequencies</option>
                    <option value="1">Monthly</option>
                    <option value="3">Quarterly</option>
                    <option value="6">Half Yearly</option>
                    <option value="12">Yearly</option>
                  </select>
                  <!-- <input type="text" name="interest_pay_out_frequencies" class="form-control" id="interest_pay_out_frequencies" placeholder="Enter Interest Pay-out Frequencies"> -->
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="interest_amount_to_be_paid_in_each_interval">Interest Amount to be paid in each interval *</label>
                  <input type="text" required name="interest_amount_to_be_paid_in_each_interval" class="form-control" id="interest_amount_to_be_paid_in_each_interval" placeholder="Enter Interest Amount to be paid in each interval">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_account_no">Investor Account No. *</label>
                  <input type="text" required name="investor_account_no" class="form-control" id="investor_account_no" placeholder="Enter Investor Account No." pattern="[0-9]{11,16}" title="Enter vailid account number">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="account_ifsc_code">Account IFSC Code *</label>
                  <input type="text" required name="account_ifsc_code" class="form-control" id="account_ifsc_code" placeholder="Enter Account IFSC Code" size="11" maxlength="11" pattern="[A-Za-z0-9]{11,}" title="Enter vailid ifsc code">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="pan_card_no">PAN Card Number *</label>
                  <input type="text" required name="pan_card_no" class="form-control" id="pan_card_no" placeholder="Enter PAN Card Number" size="10" maxlength="10" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" title="Enter vailid pancard no">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="pan_card_copy">PAN Card Copy *</label>
                  <div class="input-group">
                    <div class="custom-file">
                      <input name="pan_card_copy" required type="file" accept="image/*" class="custom-file-input" id="pan_card_copy">
                      <label class="custom-file-label" for="pan_card_copy">Choose file</label>
                    </div>
                  </div>
                  <!-- <input type="file" name="pan_card_copy" class="form-control" id="pan_card_copy" placeholder="Enter "> -->
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="payment_day">Day of payment *</label>
                  <select class="form-control" required name="payment_day" id="payment_day">
                    <option value="">Select Day of payment</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                    <option value="13">13</option>
                    <option value="14">14</option>
                    <option value="15">15</option>
                    <option value="16">16</option>
                    <option value="17">17</option>
                    <option value="18">18</option>
                    <option value="19">19</option>
                    <option value="20">20</option>
                    <option value="21">21</option>
                    <option value="22">22</option>
                    <option value="23">23</option>
                    <option value="24">24</option>
                    <option value="25">25</option>
                    <option value="26">26</option>
                    <option value="27">27</option>
                    <option value="28">28</option>
                    <option value="29">29</option>
                    <option value="30">30</option>
                    <option value="31">31</option>
                  </select>
                  <!-- <input type="text" name="interest_pay_out_frequencies" class="form-control" id="interest_pay_out_frequencies" placeholder="Enter Interest Pay-out Frequencies"> -->
                </div>
              </div>
              
              
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
      <b>Version</b> 3.0.5
    </div>
    <strong>Copyright &copy; 2014-2019 <a href="http://adminlte.io">AdminLTE.io</a>.</strong> All rights
    reserved.
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<!-- jQuery -->
<script src="/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="/dist/js/adminlte.min.js"></script>
<!-- jquery-validation -->
<script src="/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="/plugins/jquery-validation/additional-methods.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="/dist/js/demo.js"></script>
<script src="https://www.gstatic.com/firebasejs/7.17.1/firebase.js"></script>
<script src="/javascripts/common.js"></script>
<script>
  $(document).ready(function(e) {
    setTimeout(function(){ 
      $(".alert").alert('close');
    }, 10000);
    
  $('#add-new-investors').validate({
    rules: {
      investor_name: {
        required: true,
      },
      investor_mobile: {
        required: true,
      },
      investor_address: {
        required: true
      },
      invested_amount: {
        required: true
      },
      rate_of_interest: {
        required: true,
      },
      tenure_period_of_investment_month: {
        required: true,
      },
      tenure_period_of_investment_year: {
        required: true
      },
      interest_pay_out_frequencies: {
        required: true
      },
      interest_amount_to_be_paid_in_each_interval: {
        required: true,
      },
      investor_account_no: {
        required: true,
      },
      account_ifsc_code: {
        required: true
      },
      pan_card_no: {
        required: true
      },
      pan_card_copy: {
        required: true
      },
      payment_day: {
        required: true
      },
    },
    messages: {
      investor_name:{required:"Please enter a investor name"},
      investor_mobile:{required:"Please enter a investor mobile"},
      investor_address:{required:"Please enter a investor address"},
      invested_amount: {required:"Please enter a invested amount"},
      rate_of_interest:{required:"Please enter a rate of interest"},
      tenure_period_of_investment_month:{required:"Please select a tenure period of investment month"},
      tenure_period_of_investment_year:{required:"Please select a tenure period of investment year"},
      interest_pay_out_frequencies: {required:"Please select a interest pay out frequencies"},
      interest_amount_to_be_paid_in_each_interval:{required:"Please enter a interest amount to be paid in each interval"},
      investor_account_no:{required:"Please enter a investor account no"},
      account_ifsc_code: {required:"Please enter a account ifsc code"},
      pan_card_no:{required:"Please enter a pan card no"},
      pan_card_copy:{required:"Please select a pan card copy",accept:"Only jpg/jpge/png files are allowed!"},
      payment_day:{required:"Please select a payment day"},
    },
    errorElement: 'span',
    errorPlacement: function (error, element) {
      error.addClass('invalid-feedback');
      element.closest('.form-group').append(error);
    },
    highlight: function (element, errorClass, validClass) {
      $(element).addClass('is-invalid');
    },
    unhighlight: function (element, errorClass, validClass) {
      $(element).removeClass('is-invalid');
    }
  });

  
});
</script>
</body>
</html>
